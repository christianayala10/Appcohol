<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoAmarillo"
    tools:context="com.example.linux1.appcohol.MainActivity"
    android:gravity="center_vertical|center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/layout_blanco_redondeado"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="4"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_below="@+id/iv_main_logo"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <EditText
            android:id="@+id/et_main_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_amarillo"
            android:padding="10dp"
            android:textColorHint="@color/gris"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_main_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:background="@drawable/edittext_amarillo"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColorHint="@color/gris" />

        <Button
            android:id="@+id/bt_main_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_verde"
            android:text="Iniciar sesión "
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/bt_main_registrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_rojo"
            android:text="Registrar cuenta"
            android:textColor="@color/blanco"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_main_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

