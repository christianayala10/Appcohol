<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoAmarillo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/layout_blanco_redondeado"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_mostrarcocktel_nombrecocktel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cocktel"
            android:textAlignment="center"
            android:textColor="@color/gris"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mostrarcocktel_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="Test123"
                android:textColor="@color/gris"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_mostrarcocktel_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1-1-2017"
                android:textColor="@color/gris"
                android:textSize="20dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_mostrarcocktel_listacomponentes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_mostrarcocktel_personas"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_item_personas" />

            <TextView
                android:id="@+id/tv_mostrarcocktel_personas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="2-4"
                android:textColor="@color/gris"
                android:textSize="15dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_mostrarcocktel_precio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_item_precio" />

            <TextView
                android:id="@+id/tv_mostrarcocktel_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="17,5"
                android:textColor="@color/gris"
                android:textSize="15dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_mostrarcocktel_calorias"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_item_calorias" />

            <TextView
                android:id="@+id/tv_mostrarcocktel_calorias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="3210"
                android:textColor="@color/gris"
                android:textSize="15dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_mostrarcocktel_calificacion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_item_calificacion" />

            <TextView
                android:id="@+id/tv_mostrarcocktel_calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/gris"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_mostrarcocktel_mapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="3"
                android:background="@drawable/boton_azul"
                android:text="Ver mapa"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_mostrarcocktel_favoritos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="3"
                android:background="@drawable/boton_verde"
                android:text="Favoritos"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>