<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.linux1.appcohol.RegistroActivity"
    android:background="@color/fondoAmarillo"
    android:orientation="vertical"
    android:weightSum="10"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ly_registro_campos"
        android:background="@drawable/layout_blanco_redondeado"
        android:padding="20dp"
        android:layout_weight="9"
        android:weightSum="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="20dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_registro_usuario"
            android:layout_weight="1"
            android:textColorHint="@color/gris"
            android:hint="Usuario"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="normal"
            android:inputType="text"
            android:background="@drawable/edittext_amarillo"
            android:padding="10dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/et_registro_pass"
            android:layout_weight="1"
            android:textColorHint="@color/gris"
            android:hint="Contraseña"
            android:textSize="20dp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:typeface="normal"
            android:background="@drawable/edittext_amarillo"
            android:padding="10dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/et_registro_pass2"
            android:layout_weight="1"
            android:textColorHint="@color/gris"
            android:hint="Repetir contraseña"
            android:textSize="20dp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:typeface="normal"
            android:background="@drawable/edittext_amarillo"
            android:padding="10dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/et_registro_email"
            android:layout_weight="1"
            android:textColorHint="@color/gris"
            android:hint="Email"
            android:textSize="20dp"
            android:textStyle="bold"
            android:inputType="textEmailAddress|text"
            android:background="@drawable/edittext_amarillo"
            android:padding="10dp"
            android:layout_marginBottom="5dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soy mayor de edad"
            android:id="@+id/cb_registro_mayoredad"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/negro"
            android:textStyle="bold"
            android:textSize="20dp"
            android:checked="false"
            android:buttonTint="@color/azul" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_registro_campos"
        android:layout_centerHorizontal="true"
        android:id="@+id/ly_registro_botones"
        android:layout_margin="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:background="@drawable/boton_verde"
            android:id="@+id/bt_registro_registrar"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:id="@+id/bt_registro_volver"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/blanco"
            android:background="@drawable/boton_rojo"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>

</RelativeLayout>
